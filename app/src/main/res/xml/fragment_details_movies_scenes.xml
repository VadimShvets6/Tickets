<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">


    <Transition
        android:id="@+id/from_start_to_end"
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start">
        <OnSwipe motion:touchAnchorId="@id/barrier" />
        <KeyFrameSet>
         <!--   <KeyPosition
                motion:framePosition="95"
                motion:keyPositionType="pathRelative"
                motion:motionTarget="@id/round_image"
                motion:percentX="1.0" />-->
        </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_300sdp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/recycler"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/_170sdp"
            android:alpha="0"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintTop_toTopOf="@id/barrier" />
        <Constraint
            android:id="@+id/moviesDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0"
            android:orientation="horizontal"
            android:layout_marginStart="@dimen/default_margin"
            android:layout_marginEnd="@dimen/default_margin"
            motion:layout_constraintTop_toBottomOf="@id/main_title"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"/>
        <Constraint
            android:id="@+id/rating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0"
            android:orientation="horizontal"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_marginEnd="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_6sdp"
            motion:layout_constraintTop_toBottomOf="@id/main_title"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"/>
        <Constraint
            android:id="@+id/genres"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0"
            android:orientation="horizontal"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_marginEnd="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_6sdp"
            motion:layout_constraintTop_toBottomOf="@id/main_title"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"/>
        <Constraint
            android:id="@+id/barrier"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintVertical_bias="0.60" />
        <Constraint
            android:id="@+id/main_image"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toTopOf="@+id/barrier"
            motion:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/main_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:layout_marginStart="@dimen/_8sdp"
            android:textSize="@dimen/_18ssp"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@+id/round_image" />

        <Constraint
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_margin"
            android:layout_marginStart="@dimen/default_margin"
            android:layout_marginEnd="@dimen/default_margin"
            motion:layout_constraintTop_toBottomOf="@id/main_title"
            motion:layout_constraintStart_toStartOf="parent"
            android:alpha="1"
            motion:layout_constraintEnd_toEndOf="parent"/>
        <Constraint
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_6sdp"
            android:layout_marginStart="@dimen/default_margin"
            android:layout_marginEnd="@dimen/default_margin"
            motion:layout_constraintBottom_toBottomOf="parent"/>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/main_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_12sdp"
            android:textSize="@dimen/_18ssp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:layout_marginStart="@dimen/_8sdp"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@+id/round_image" />
        <Constraint
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0"
            android:layout_marginTop="@dimen/default_margin"
            android:layout_marginStart="@dimen/default_margin"
            android:layout_marginEnd="@dimen/default_margin"
            motion:layout_constraintTop_toBottomOf="@id/main_title"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"/>
        <Constraint
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_300sdp"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_margin"
            android:layout_marginEnd="@dimen/default_margin"
            android:layout_marginBottom="-140dp"
            motion:layout_constraintBottom_toBottomOf="parent" />
        <Constraint
            android:id="@+id/recycler"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/_minus12sdp"
            android:alpha="1"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintTop_toBottomOf="@id/top_bg" />
       <!-- <Constraint
            android:id="@+id/round_image"
            android:layout_width="@dimen/_54sdp"
            android:layout_height="@dimen/_54sdp"
            android:layout_marginStart="@dimen/_12sdp"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />-->
        <Constraint
            android:id="@+id/main_image"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toTopOf="@+id/barrier"
            motion:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/barrier"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintVertical_bias="0.35 " />
        <Constraint
            android:id="@+id/rating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0"
            android:layout_marginTop="@dimen/_6sdp"
            android:layout_marginBottom="@dimen/default_margin"
            android:layout_marginStart="@dimen/default_margin"
            android:layout_marginEnd="@dimen/default_margin"
            motion:layout_constraintTop_toBottomOf="@id/main_title"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"/>
        <Constraint
            android:id="@+id/genres"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0"
            android:layout_marginTop="@dimen/_6sdp"
            android:layout_marginBottom="@dimen/default_margin"
            android:layout_marginStart="@dimen/default_margin"
            android:layout_marginEnd="@dimen/default_margin"
            motion:layout_constraintTop_toBottomOf="@id/main_title"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"/>
        <Constraint
            android:id="@+id/dataRelease"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0"
            android:layout_marginTop="@dimen/_6sdp"
            android:layout_marginEnd="@dimen/_50sdp"
            motion:layout_constraintTop_toBottomOf="@id/main_title"
            motion:layout_constraintEnd_toEndOf="parent"/>
        <Constraint
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0"
            android:layout_marginTop="@dimen/_6sdp"
            android:layout_marginBottom="@dimen/default_margin"
            android:layout_marginStart="@dimen/default_margin"
            android:layout_marginEnd="@dimen/default_margin"
            motion:layout_constraintTop_toBottomOf="@id/main_title"
            motion:layout_constraintEnd_toEndOf="parent"/>
        <Constraint
            android:id="@+id/moviesDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="1"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_6sdp"
            android:layout_marginBottom="@dimen/default_margin"
            android:layout_marginStart="@dimen/default_margin"
            android:layout_marginEnd="@dimen/default_margin"
            motion:layout_constraintTop_toBottomOf="@id/main_title"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"/>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/FullyExpanded">
        <Constraint
            android:id="@+id/barrier"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintVertical_bias="0.0" />
        <Constraint
            android:id="@+id/top_bg"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/_minus14sdp"
            android:layout_marginBottom="@dimen/_minus14sdp"
            android:alpha="1"
            motion:layout_constraintTop_toBottomOf="@id/barrier"
            motion:layout_constraintBottom_toBottomOf="@id/round_image"/>
        <Constraint
            android:id="@+id/recycler"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/_minus12sdp"
            android:alpha="1"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintTop_toBottomOf="@id/top_bg" />
        <Constraint
            android:id="@+id/round_image"
            android:layout_width="@dimen/_84sdp"
            android:layout_height="@dimen/_104sdp"
            android:layout_marginStart="@dimen/_12sdp"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@+id/toolbar" />
        <Constraint
            android:id="@+id/main_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_14sdp"
            android:layout_marginTop="@dimen/_7sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:textSize="@dimen/_8ssp"
            motion:layout_constraintStart_toEndOf="@id/round_image"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintTop_toTopOf="@id/round_image"/>
        <Constraint
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_margin"
            android:layout_marginEnd="@dimen/default_margin"
            android:layout_marginBottom="-140dp"
            motion:layout_constraintBottom_toBottomOf="parent" />
        <Constraint
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0"
            android:layout_marginTop="@dimen/default_margin"
            android:layout_marginStart="@dimen/default_margin"
            android:layout_marginEnd="@dimen/default_margin"
            motion:layout_constraintTop_toBottomOf="@id/main_title"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"/>
        <Constraint
            android:id="@+id/rating"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:alpha="1"
            android:layout_marginTop="@dimen/_4sdp"
            android:orientation="vertical"
            android:layout_marginEnd="@dimen/_12sdp"
            motion:layout_constraintTop_toBottomOf="@id/main_title"
            motion:layout_constraintStart_toStartOf="@id/main_title"
            motion:layout_constraintEnd_toEndOf="parent"/>
        <Constraint
            android:id="@+id/genres"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:alpha="1"
            android:layout_marginTop="@dimen/_4sdp"
            android:orientation="vertical"
            android:layout_marginEnd="@dimen/_12sdp"
            motion:layout_constraintTop_toBottomOf="@id/rating"
            motion:layout_constraintStart_toStartOf="@id/rating"
            motion:layout_constraintEnd_toEndOf="parent"/>
        <Constraint
            android:id="@+id/dataRelease"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:alpha="1"
            android:layout_marginTop="@dimen/_4sdp"
            android:orientation="vertical"
            android:layout_marginEnd="@dimen/_12sdp"
            motion:layout_constraintTop_toBottomOf="@id/genres"
            motion:layout_constraintStart_toStartOf="@id/genres"
            motion:layout_constraintEnd_toEndOf="parent"/>
        <Constraint
            android:id="@+id/time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:alpha="1"
            android:layout_marginTop="@dimen/_4sdp"
            android:orientation="vertical"
            android:layout_marginEnd="@dimen/_12sdp"
            motion:layout_constraintTop_toBottomOf="@id/dataRelease"
            motion:layout_constraintStart_toStartOf="@id/dataRelease"
            motion:layout_constraintEnd_toEndOf="parent"/>
        <Constraint
            android:id="@+id/moviesDetails"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginEnd="@dimen/_12sdp"
            motion:layout_constraintTop_toBottomOf="@id/main_title"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"/>
    </ConstraintSet>
    <Transition
        android:id="@+id/recycled_transition"
        motion:constraintSetEnd="@+id/FullyExpanded"
        motion:constraintSetStart="@+id/end">
        <OnSwipe motion:touchAnchorId="@id/barrier" />
        <KeyFrameSet>
            <KeyPosition
                motion:framePosition="95"
                motion:keyPositionType="deltaRelative"
                motion:motionTarget="@id/rating"
                motion:percentX="1.0" />
            <KeyPosition
                motion:framePosition="95"
                motion:keyPositionType="deltaRelative"
                motion:motionTarget="@id/genres"
                motion:percentX="1.0" />
            <KeyPosition
                motion:framePosition="95"
                motion:keyPositionType="deltaRelative"
                motion:motionTarget="@id/dataRelease"
                motion:percentX="1.0" />
            <KeyPosition
                motion:framePosition="95"
                motion:keyPositionType="deltaRelative"
                motion:motionTarget="@id/time"
                motion:percentX="1.0" />
        </KeyFrameSet>
    </Transition>
</MotionScene>